<div class ="new_playlist">
        <% if playlist.errors.any? %>
        <% playlist.errors.full_messages.each do |m| %>
                <p class="danger"><%= m %></p>
            <% end %>
        <% end %>
    <div class ="new_playlist_form">
    <%= form_for playlist do |f| %>
        <%= f.text_field :name, placeholder:"Playlist Name"%>
        
      <%= f.submit %>
    <% end %><br/>
    <% if current_user.playlists.include?(playlist)%>
        <%= button_to "Delete Playlist", playlist_path(playlist), method: :delete, data: {confirm: "Are you sure you want to delete this playlist?"} %>
    <%end%>
    </div>

</div>